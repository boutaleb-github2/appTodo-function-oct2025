{
  // Désactiver Copilot uniquement dans ce projet
  "github.copilot.enable": false,

  // Formatage du code à la sauvegarde
  "editor.formatOnSave": true,

  // Actions automatiques sur sauvegarde 
  // "source.organizeImports": "always",   // nettoie et trie les imports automatiquement
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",          // corrige si tu demandes manuellement
   
    "source.sortMembers": "explicit"      // inutile en JS mais ok si tu actives TS plus tard
  },

  // Style d'indentation
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Afficher la mini-map à droite (utile pour grands fichiers)
  "editor.minimap.enabled": true,

  // Empêcher les erreurs TypeScript inutiles en JS
  "javascript.validate.enable": true,
  "typescript.validate.enable": false,

  // Prévenir les warnings inutiles de VS Code sur Expo
  "javascript.suggestionActions.enabled": false,

  // Choisir bash comme terminal par défaut (Ubuntu)
  "terminal.integrated.defaultProfile.linux": "bash",
  "files.autoSave": "off",
  "files.autoSaveDelay": 1000,   // délai en ms (ici 1 min)
  
  // ❌ coupe l’IntelliSense JS/TS (fini les props comme renderItem, auto-imports, etc.)
  "javascript.suggest.enabled": false,
  "typescript.suggest.enabled": false,
  "javascript.suggest.autoImports": false,
  "typescript.suggest.autoImports": false,

  // ❌ pas de snippets / fantômes / hints
  "editor.suggest.showSnippets": false,
  "editor.inlineSuggest.enabled": false,
  "editor.parameterHints.enabled": false,

  // ✅ garder uniquement la complétion "mots"
  "editor.wordBasedSuggestions": true,
  "editor.wordBasedSuggestionsMode": "currentDocument",

  // suggestions pendant la frappe (nécessaire pour voir les mots)
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },

  // évite les déclencheurs agressifs (ex: après un point)
  "editor.suggestOnTriggerCharacters": false,

  // pas d’acceptation involontaire en appuyant sur Entrée
  "editor.acceptSuggestionOnEnter": "off",

  // pas d’expansion de snippet au Tab
  "editor.tabCompletion": "off",
  "emmet.triggerExpansionOnTab": false


}
